# ILEX Backend Environment Configuration
# Copy this file to .env and update with your actual values
# DO NOT commit .env file to version control

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
ENVIRONMENT=development
DEBUG=true

# SurrealDB Configuration
# Replace with your SurrealDB server details
SURREALDB_URL=ws://your-surrealdb-host:8000/rpc
SURREALDB_USERNAME=root
SURREALDB_PASSWORD=your-surrealdb-password
SURREALDB_NS=your-namespace
SURREALDB_DB=your-database

# JWT Configuration
# IMPORTANT: Use a strong, unique secret in production
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRATION=24

# OTP Configuration
OTP_EXPIRATION=5
OTP_LENGTH=6

# SMS Configuration (for OTP notifications)
# Add your SMS provider API credentials
SMS_API_KEY=your-sms-provider-api-key
SMS_API_SECRET=your-sms-provider-api-secret

# Email Configuration (for notifications)
# Configure your SMTP settings
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@domain.com
SMTP_PASSWORD=your-email-app-password

# Platform Commission Settings (adjust for your business)
DEFAULT_COMMISSION_RATE=0.15
DEFAULT_SERVICE_FEE=500.0

# Referral Settings (in local currency)
REFERRAL_REWARD_AMOUNT=1000.0
REFERRAL_EXPIRATION=30

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Redis Configuration (if used for caching/sessions)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# External APIs Configuration
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# PUSH_NOTIFICATION_KEY=your_push_notification_key

# Monitoring and Logging
# SENTRY_DSN=your_sentry_dsn
# LOG_LEVEL=info